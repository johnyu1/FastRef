<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<welcome-file-list>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>FastRef</servlet-name>
		<servlet-class>fastref.FastRefServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FastRef</servlet-name>
		<url-pattern>/fastref</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>fastref.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	    <servlet>
    	<servlet-name>upload</servlet-name>
    	<servlet-class>fastref.UploadServlet</servlet-class>
  	</servlet>
   <servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>  
	<servlet>
    	<servlet-name>serve</servlet-name>
    	<servlet-class>fastref.ServeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>serve</servlet-name>
    	<url-pattern>/serve</url-pattern>
  	</servlet-mapping>  
	<filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
	</filter-mapping>
    <security-constraint>
    <web-resource-collection>
        <web-resource-name>upload</web-resource-name>
        <url-pattern>/upload.jsp/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>*</role-name>
    </auth-constraint>
	</security-constraint>
</web-app>
